---
import type { Page } from "astro";
import type { CollectionEntry } from "astro:content";
import Pagination from "../components/Pagination.astro";
import SearchArticles from "../components/SearchArticles.astro";
import TagsBox from "../components/TagsBox.astro";
import BlogCard from "../components/BlogCard.astro";
import MainLayout from "./MainLayout.astro";

export interface Props {
  title: string;
  page: Page<CollectionEntry<"blog">>;
  allTags: string[];
  currentTag?: string;
  showSearch?: boolean;
}

const { title, page, allTags, currentTag, showSearch = true } = Astro.props;
---

<MainLayout title={title}>
  <!-- Header Slot for custom content -->
  <slot name="header" />

  <!-- Search and Filter -->
  {
    showSearch && (
      <div class="mb-4 space-y-4 py-3">
        <div class="relative mx-auto max-w-md">
          <SearchArticles />
        </div>
      </div>
    )
  }

  <!-- Tags (Sticky) -->
  <div class="sticky top-20 z-40 mb-8 py-4 backdrop-blur-lg">
    <div class="mx-auto max-w-4xl">
      <TagsBox tags={allTags} />
    </div>
  </div>

  <!-- Blog Posts Grid -->
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {page.data.map((post) => <BlogCard post={post} currentTag={currentTag} />)}
  </div>

  <!-- Empty State -->
  {
    page.data.length === 0 && (
      <div class="py-16 text-center">
        <div class="mb-4 text-6xl opacity-20">üìù</div>
        <h2 class="mb-2 text-xl font-semibold text-gray-900 dark:text-gray-100">
          Ë®ò‰∫ã„ÅåË¶ã„Å§„Åã„Çä„Åæ„Åõ„Çì
        </h2>
        <p class="text-gray-600 dark:text-gray-400">
          <slot name="empty-message">Ë®ò‰∫ã„Åå„ÅÇ„Çä„Åæ„Åõ„Çì</slot>
        </p>
      </div>
    )
  }

  <!-- Pagination -->
  <div class="mt-12">
    <Pagination prev={page.url.prev} next={page.url.next} />
  </div>
</MainLayout>
