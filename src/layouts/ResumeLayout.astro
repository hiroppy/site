---
import Link from "../components/Link.astro";

const { frontmatter } = Astro.props;
---

<html class="bg-slate-100">
  <style is:global>
    @reference "tailwindcss";

    h2 {
      @apply my-4 text-xl font-semibold text-sky-700;
    }

    h2::before {
      content: "> ";
    }

    h2:has(~ h2) ~ *:not(h2) {
      @apply ml-4;
    }

    h3 {
      @apply my-4 text-lg font-semibold text-green-700;
    }

    h3::before {
      content: ">> ";
    }

    h4 {
      @apply my-4 font-semibold text-orange-700;
    }

    h4::before {
      content: ">>> ";
    }

    table {
      @apply my-4 overflow-x-auto whitespace-nowrap;
    }

    td,
    th {
      @apply px-2;
    }

    ul {
      @apply list-inside;
      list-style-type: "-  ";
    }

    a {
      @apply text-blue-600;
    }

    p,
    ul {
      @apply mt-2;
    }
  </style>
  <div class="container mx-auto my-6 px-6">
    <div class="flex items-center justify-between">
      <h1 class="text-3xl">{frontmatter.title}</h1>
      <Link
        href="https://github.com/hiroppy/site/tree/main/src/pages/resume.md"
        class="text-sm text-blue-600"
        ariaLabel="Edit this page on GitHub">Edit this Markdown</Link
      >
    </div>
    <div class="mt-6">
      <slot />
    </div>
  </div>


</html>
