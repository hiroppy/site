---
import Layout from "../../layouts/Layout.astro";
import MediaLayout from "../../layouts/MediaLayout.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import Timeline from "../../components/Timeline.astro";
import data from "../../../generated/articles.json";
import { getMediaIcon } from "../../utils/getMediaIcon";

const sites = data.map((item) => ({
  ...item,
  icon: getMediaIcon("article"),
}));
---

<Layout title="media/articles">
  <MainLayout title="Media / articles">
    <MediaLayout current="articles">
      <Timeline items={sites} />
    </MediaLayout>
  </MainLayout>
</Layout>
