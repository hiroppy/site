---
import Layout from "../../layouts/Layout.astro";
import MediaLayout from "../../layouts/MediaLayout.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import Timeline from "../../components/Timeline.astro";
import data from "../../../generated/podcasts.json";
import { getMediaIcon } from "../../utils/getMediaIcon";

const sites = data.map((item) => ({
  ...item,
  icon: getMediaIcon("podcast"),
}));
---

<Layout title="Podcasts">
  <MainLayout title="Media / podcasts">
    <MediaLayout current="podcasts">
      <Timeline items={sites} />
    </MediaLayout>
  </MainLayout>
</Layout>
