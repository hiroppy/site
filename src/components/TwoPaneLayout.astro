---
import Footer from "./Footer.astro";
import { cn } from "../utils/cn";

export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class={cn("flex w-full flex-col md:flex-row", className)}>
  <!-- サイドバー：sticky positioning で上部に固定、自身のスクロールを持つ -->
  <div class="sidebar-container">
    <slot name="sidebar" />
  </div>

  <!-- メインコンテンツ：通常のフロー、ページ全体のスクロールに従う -->
  <div
    class="main-content flex flex-1 flex-col overflow-x-hidden bg-gradient-to-br from-slate-50 to-blue-50 dark:from-slate-900 dark:to-slate-800"
  >
    <slot name="content" />
    <!-- フッターを最下部に配置 -->
    <div class="mt-auto">
      <Footer />
    </div>
  </div>
</div>

<style is:global>
  /* ページ全体のスクロールを有効にする */
  body {
    overflow: auto;
  }

  html {
    scroll-padding-top: 80px;
  }

  /* サイドバーのスティッキー配置（デスクトップのみ） */
  @media (min-width: 768px) {
    .sidebar-container {
      position: sticky;
      top: 80px; /* ヘッダー分の余白を確保 */
      height: calc(100vh - 80px); /* topで指定した分を差し引く */
      overflow-y: auto;
      flex-shrink: 0;
    }
  }

  /* モバイルではサイドバーコンテナのスタイルを無効化 */
  @media (max-width: 767px) {
    .sidebar-container {
      position: static;
      height: auto;
      overflow: visible;
    }
  }

  /* lg(1024px)未満でサイドバーコンテナ内のhiddenな要素しかない場合、コンテナを非表示 */
  @media (max-width: 1023px) {
    .sidebar-container:has(> .hidden) {
      display: none;
    }
  }

  /* メインコンテンツは最小高さを画面全体に */
  .main-content {
    min-height: 100vh;
  }

  /* サイドバーのスクロールバーをカスタマイズ */
  .sidebar-container::-webkit-scrollbar {
    width: 8px;
  }

  .sidebar-container::-webkit-scrollbar-track {
    background: transparent;
  }

  .sidebar-container::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 4px;
  }

  .sidebar-container::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 0, 0, 0.3);
  }

  /* ダークモード対応 */
  @media (prefers-color-scheme: dark) {
    .sidebar-container::-webkit-scrollbar-thumb {
      background: rgba(255, 255, 255, 0.2);
    }

    .sidebar-container::-webkit-scrollbar-thumb:hover {
      background: rgba(255, 255, 255, 0.3);
    }
  }
</style>
