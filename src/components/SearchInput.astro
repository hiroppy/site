---
import Icon from "./Icon.astro";

type Props = {
  id: string;
  placeholder?: string;
  class?: string;
};

const { id, placeholder = "Search...", class: className = "" } = Astro.props;
---

<div class={`relative ${className}`}>
  <Icon
    icon="mdi:magnify"
    class="absolute top-1/2 left-3 h-4 w-4 -translate-y-1/2 transform text-gray-400"
  />
  <input
    type="text"
    id={id}
    placeholder={placeholder}
    class="w-full cursor-text rounded-lg border border-gray-300 py-2 pr-4 pl-10 text-sm text-gray-900 placeholder-gray-500 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 focus:outline-none dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500/20"
  />
</div>
