---
type Props = {
  href: string;
  name: string;
};

const { href, name } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class="hover:text-sky-500 text-gray-300"
  aria-label={`Link for ${name}`}
>
  <svg
    class="h-5 w-5"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <slot />
  </svg>
</a>
