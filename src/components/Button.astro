---
export interface Props {
  id?: string;
  variant?:
    | "default"
    | "outline"
    | "secondary"
    | "ghost"
    | "link"
    | "destructive"
    | "nav"
    | "nav-active"
    | "nav-mobile"
    | "nav-mobile-active"
    | "social"
    | "contact"
    | "cta-white";
  size?: "default" | "sm" | "lg" | "icon";
  class?: string;
  href?: string;
  target?: string;
  rel?: string;
  disabled?: boolean;
  type?: "button" | "submit" | "reset";
  onclick?: string;
  ariaLabel?: string;
}

const {
  id,
  variant = "default",
  size = "default",
  class: className = "",
  href,
  target,
  rel,
  disabled = false,
  type = "button",
  onclick,
  ariaLabel,
} = Astro.props;

const baseStyles =
  "inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50";

const variants = {
  default: "bg-primary text-primary-foreground shadow hover:bg-primary/90",
  destructive:
    "bg-destructive text-destructive-foreground shadow-sm hover:bg-destructive/90",
  outline:
    "border border-gray-300 bg-white text-gray-700 shadow-sm hover:bg-gray-50 hover:text-gray-900 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700",
  secondary:
    "bg-secondary text-secondary-foreground shadow-sm hover:bg-secondary/80",
  ghost:
    "text-gray-700 hover:bg-gray-100 hover:text-gray-900 dark:text-gray-300 dark:hover:bg-accent dark:hover:text-accent-foreground",
  link: "text-primary underline-offset-4 hover:underline",
  nav: "relative px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 text-gray-700 hover:text-blue-600 hover:bg-gray-100 dark:text-gray-300 dark:hover:text-blue-400 dark:hover:bg-gray-700",
  "nav-active":
    "relative px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 bg-blue-100 text-blue-700 dark:bg-blue-900/50 dark:text-blue-300",
  "nav-mobile":
    "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-100 dark:text-gray-300 dark:hover:text-blue-400 dark:hover:bg-gray-700",
  "nav-mobile-active":
    "block px-3 py-2 rounded-md text-base font-medium bg-blue-100 text-blue-700 dark:bg-blue-900/50 dark:text-blue-300",
  social:
    "border border-gray-300 bg-white text-gray-700 shadow-sm hover:bg-gray-50 hover:text-gray-900 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700",
  contact:
    "bg-white border-blue-200 text-blue-600 shadow-sm hover:bg-blue-50 dark:bg-gray-800 dark:border-blue-800 dark:text-blue-400 dark:hover:bg-blue-800",
  "cta-white":
    "bg-white text-blue-600 shadow-sm hover:bg-blue-50 dark:bg-gray-100 dark:text-blue-600 dark:hover:bg-gray-50",
};

const sizes = {
  default: "h-9 px-4 py-2",
  sm: "h-8 rounded-md px-3 text-xs",
  lg: "h-10 rounded-md px-8",
  icon: "h-9 w-9",
};

const classes = `${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`;

const Tag = href ? "a" : "button";

// Auto-detect external links and add target="_blank" rel="noreferrer"
const isExternalLink =
  href && href.startsWith("http") && !href.startsWith(import.meta.env.SITE);
const finalTarget = target || (isExternalLink ? "_blank" : undefined);
const finalRel = rel || (isExternalLink ? "noreferrer" : undefined);

const props = {
  id,
  class: classes,
  ...(href && { href }),
  ...(finalTarget && { target: finalTarget }),
  ...(finalRel && { rel: finalRel }),
  ...(disabled && { disabled: true }),
  ...(!href && { type }),
  ...(onclick && { onclick }),
  ...(ariaLabel && { "aria-label": ariaLabel }),
};
---

<Tag {...props}>
  <slot />
</Tag>
