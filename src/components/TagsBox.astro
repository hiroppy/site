---
import BlogTag from "./BlogTag.astro";
import Paper from "./Paper.astro";

type Props = {
  tags: string[];
};

const { tags } = Astro.props;
---

<Paper>
  <div class="p-4">
    <p>🏷 Tags</p>
    <div class="flex gap-2 mt-4 flex-wrap">
      {tags.map((tag) => <BlogTag tag={tag}>{tag}</BlogTag>)}
    </div>
  </div>
</Paper>
