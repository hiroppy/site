---
import { cn } from "../utils/cn";

type Props = {
  variant?: "default" | "secondary" | "destructive" | "outline" | "primary";
  class?: string;
};

const { variant = "default", class: className = "" } = Astro.props;

const classes = cn(
  "inline-flex items-center rounded-full px-3 py-1 text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2",
  variant === "default" &&
    "bg-primary text-primary-foreground shadow hover:bg-primary/80",
  variant === "primary" &&
    "bg-blue-700 text-white hover:bg-blue-800 dark:bg-blue-700 dark:hover:bg-blue-800 shadow-sm",
  variant === "secondary" &&
    "bg-gray-200 text-gray-800 hover:bg-gray-300 dark:bg-slate-600 dark:text-gray-100 dark:hover:bg-slate-500",
  variant === "destructive" &&
    "bg-destructive text-destructive-foreground shadow hover:bg-destructive/80",
  variant === "outline" &&
    "border border-gray-400 bg-white text-gray-700 hover:bg-gray-50 dark:border-gray-500 dark:bg-slate-800 dark:text-gray-200 dark:hover:bg-slate-700",
  className,
);
---

<div class={classes}>
  <slot />
</div>
