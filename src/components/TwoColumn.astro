---
export interface Props {
  class?: string;
  gap?: "sm" | "md" | "lg";
  ratio?: "1:1" | "1:2" | "2:1" | "3:2" | "2:3";
}

const { class: className = "", gap = "md", ratio = "1:1" } = Astro.props;

const gapClasses = {
  sm: "gap-4",
  md: "gap-6",
  lg: "gap-8",
};

const ratioClasses = {
  "1:1": "md:grid-cols-2",
  "1:2":
    "md:grid-cols-3 [&>:first-child]:md:col-span-1 [&>:last-child]:md:col-span-2",
  "2:1":
    "md:grid-cols-3 [&>:first-child]:md:col-span-2 [&>:last-child]:md:col-span-1",
  "3:2":
    "md:grid-cols-5 [&>:first-child]:md:col-span-3 [&>:last-child]:md:col-span-2",
  "2:3":
    "md:grid-cols-5 [&>:first-child]:md:col-span-2 [&>:last-child]:md:col-span-3",
};
---

<div
  class={`grid grid-cols-1 ${ratioClasses[ratio]} ${gapClasses[gap]} ${className}`}
>
  <slot />
</div>
