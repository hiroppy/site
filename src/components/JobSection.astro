---
import type JobMeta from "hiroppy/generated/jobs.json";
import Image from "./Image.astro";
import { marked } from "marked";
import Link from "./Link.astro";
import Card from "./Card.astro";
import CardContent from "./CardContent.astro";
import CardTitle from "./CardTitle.astro";
import ExpandableArticleLinks from "./ExpandableArticleLinks.astro";
import PeriodBadge from "./PeriodBadge.astro";

type JobContent = (typeof JobMeta)["main"] | (typeof JobMeta)["side"];
type JobMetaData = (typeof JobMeta)["meta"];

type CompanyMeta = {
  image: string;
  url: string;
};

type JobItem = JobContent[number];
type JobItemWithParsedDescription = Omit<JobItem, "description"> & {
  description: string;
};

type Props = {
  title: "Main Job" | "My Company";
  items: JobContent;
  meta: JobMetaData;
};

const { title, items, meta } = Astro.props;
const titleLabel = title === "Main Job" ? "main" : "coder-penguin";

// Helper function to safely get company metadata
function getCompanyMeta(
  metadata: JobMetaData,
  companyKey: string,
): CompanyMeta | null {
  const companyMeta = metadata[companyKey as keyof JobMetaData];
  if (!companyMeta || typeof companyMeta !== "object") {
    return null;
  }
  return companyMeta as CompanyMeta;
}

// Parse markdown descriptions with proper typing
const history: JobItemWithParsedDescription[] = await Promise.all(
  items.map(async (item) => ({
    ...item,
    description: (await marked.parse(item.description)) as string,
  })),
);
---

<div class="space-y-6">
  <CardTitle level={3} class="text-xl">
    {title}
  </CardTitle>
  <div class="space-y-6">
    {
      history.map(
        (
          { name, company, description, start, end, position, links },
          index,
        ) => {
          const isCurrentJob = end === null;
          const jobType = title === "Main Job" ? "main" : "side";
          const jobId = `${jobType}-${index}`;
          return (
            <Card
              id={jobId}
              class="group card-lift scroll-mt-24 shadow-sm"
              ariaLabel={`${titleLabel}-${name}`}
            >
              <CardContent>
                {/* Mobile Layout */}
                <div class="block space-y-4 md:hidden">
                  {/* Header: Image + Company + Position */}
                  <div class="flex items-start gap-3">
                    {(() => {
                      const companyMeta = getCompanyMeta(meta, company);
                      return (
                        companyMeta && (
                          <div class="shrink-0">
                            <Image
                              src={companyMeta.image}
                              alt={name}
                              width={48}
                              height={48}
                              class="h-12 w-12 rounded-lg bg-white p-1.5 shadow-sm transition-transform group-hover:scale-105"
                            />
                          </div>
                        )
                      );
                    })()}
                    <div class="min-w-0 flex-1">
                      <div class="flex items-start justify-between gap-2">
                        <div class="min-w-0 flex-1">
                          <CardTitle level={4} class="mb-1 text-base">
                            {(() => {
                              const companyMeta = getCompanyMeta(meta, company);
                              return companyMeta ? (
                                <Link
                                  href={companyMeta.url}
                                  class="text-gray-900 transition-colors hover:text-blue-700 dark:text-white dark:hover:text-blue-400"
                                  ariaLabel={`${name}の会社サイトを開く`}
                                >
                                  {name}
                                </Link>
                              ) : (
                                <span class="text-gray-900 dark:text-white">
                                  {name}
                                </span>
                              );
                            })()}
                          </CardTitle>
                          <div class="flex items-center space-x-2">
                            <span
                              class={`inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium ${
                                isCurrentJob
                                  ? "bg-green-100 text-green-900 dark:bg-green-900/30 dark:text-green-400"
                                  : "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
                              }`}
                            >
                              {position}
                            </span>
                            {isCurrentJob && (
                              <div class="flex items-center space-x-1 text-xs text-green-800 dark:text-green-400">
                                <div class="h-1.5 w-1.5 animate-pulse rounded-full bg-green-500" />
                                <span>Current</span>
                              </div>
                            )}
                          </div>
                        </div>
                        <PeriodBadge
                          start={new Date(start)}
                          end={end ? new Date(end) : null}
                          variant="text"
                          class="shrink-0"
                        />
                      </div>
                    </div>
                  </div>
                  <div
                    class="job-history prose prose-sm dark:prose-invert max-w-none text-sm text-gray-600 dark:text-gray-300"
                    set:html={description}
                  />
                  <ExpandableArticleLinks links={links} companyName={name} />
                </div>

                {/* Desktop Layout */}
                <div class="hidden md:block">
                  <div class="flex items-start gap-4">
                    {(() => {
                      const companyMeta = getCompanyMeta(meta, company);
                      return (
                        companyMeta && (
                          <div class="shrink-0">
                            <Image
                              src={companyMeta.image}
                              alt={name}
                              width={60}
                              height={60}
                              class="h-16 w-16 rounded-lg bg-white p-2 shadow-sm transition-transform group-hover:scale-105"
                            />
                          </div>
                        )
                      );
                    })()}
                    <div class="min-w-0 flex-1 space-y-3">
                      <div class="space-y-2">
                        <CardTitle level={4} class="text-lg">
                          {(() => {
                            const companyMeta = getCompanyMeta(meta, company);
                            return companyMeta ? (
                              <Link
                                href={companyMeta.url}
                                class="text-gray-900 transition-colors hover:text-blue-700 dark:text-white dark:hover:text-blue-400"
                                ariaLabel={`${name}の会社サイトを開く`}
                              >
                                {name}
                              </Link>
                            ) : (
                              <span class="text-gray-900 dark:text-white">
                                {name}
                              </span>
                            );
                          })()}
                        </CardTitle>
                        <div class="flex items-center justify-between">
                          <div class="flex items-center space-x-2">
                            <span
                              class={`inline-flex items-center rounded-full px-3 py-1 text-xs font-medium ${
                                isCurrentJob
                                  ? "bg-green-100 text-green-900 dark:bg-green-900/30 dark:text-green-400"
                                  : "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
                              }`}
                            >
                              {position}
                            </span>
                            {isCurrentJob && (
                              <div class="flex items-center space-x-1 text-xs text-green-800 dark:text-green-400">
                                <div class="h-2 w-2 animate-pulse rounded-full bg-green-500" />
                                <span>Current</span>
                              </div>
                            )}
                          </div>
                          <PeriodBadge
                            start={new Date(start)}
                            end={end ? new Date(end) : null}
                            variant="text"
                            class="shrink-0"
                          />
                        </div>
                      </div>

                      <div
                        class="job-history prose prose-sm dark:prose-invert max-w-none text-sm text-gray-600 dark:text-gray-300"
                        set:html={description}
                      />

                      <ExpandableArticleLinks
                        links={links}
                        companyName={name}
                      />
                    </div>
                  </div>
                </div>
              </CardContent>
            </Card>
          );
        },
      )
    }
  </div>
  <slot />
</div>
<style is:global>
  .job-history ul {
    list-style-type: disc;
    padding-left: 1.25rem;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .job-history ul li {
    margin-bottom: 0.25rem;
    line-height: 1.5;
  }

  .job-history a {
    color: #1d4ed8;
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }

  .job-history a:hover {
    color: #1d4ed8;
  }

  .dark .job-history a {
    color: #60a5fa;
  }

  .dark .job-history a:hover {
    color: #93c5fd;
  }

  .job-history p {
    margin-bottom: 0.75rem;
    line-height: 1.6;
  }

  .job-history p:last-child {
    margin-bottom: 0;
  }
</style>
