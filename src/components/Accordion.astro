---
type Props = {
  options: readonly {
    icon: string;
    title: string;
    content: string;
    href: string;
  }[];
};

const { options } = Astro.props;
---

{
  options.map(({ icon, title, content, href }) => {
    const isOpen =
      href === "/"
        ? Astro.url.pathname === href
        : Astro.url.pathname.includes(href);

    return (
      <div>
        <a
          class={`flex items-center justify-between w-full p-4 font-medium text-left dark:hover:bg-slate-600 transition ${
            isOpen ? "bg-slate-600 text-blue-200" : ""
          }`}
          aria-expanded={isOpen ? "true" : "false"}
          href={href}
        >
          <div class="flex gap-2 items-center">
            <span class="text-2xl">{icon}</span>
            <span>{title}</span>
          </div>
          <svg
            class={`w-6 h-6 shrink-0 ${isOpen ? "rotate-180" : ""}`}
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
        <div
          class={isOpen ? "" : "hidden"}
          aria-labelledby="accordion-collapse-heading-1"
        >
          <div class="p-5 font-light bg-slate-500">
            <p class="mb-2 text-white text-sm">{content}</p>
          </div>
        </div>
      </div>
    );
  })
}
