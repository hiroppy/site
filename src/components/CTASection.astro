---
import Icon from "./Icon.astro";
import { cn } from "../utils/cn";

type Props = {
  title: string;
  description?: string;
  icon: string;
  gradientFrom: string;
  gradientTo: string;
  class?: string;
};

const {
  title,
  description,
  icon,
  gradientFrom,
  gradientTo,
  class: className = "",
} = Astro.props;
---

<section
  class={cn(
    "rounded-2xl bg-gradient-to-r p-8 text-center text-white",
    gradientFrom,
    gradientTo,
    className,
  )}
>
  <div class="mx-auto max-w-3xl space-y-6">
    <div
      class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-white/20"
    >
      <Icon icon={icon} width="32" height="32" />
    </div>
    <h2 class="text-3xl font-bold">{title}</h2>
    <div class="text-xl text-blue-100 dark:text-blue-200">
      <slot name="description">
        {description && <p>{description}</p>}
      </slot>
    </div>
    <slot />
  </div>
</section>
