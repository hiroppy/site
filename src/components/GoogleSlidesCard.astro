---
type Props = {
  id: string;
  title?: string;
};

const { id, title = "Google Slides Presentation" } = Astro.props;
---

<div class="google-slides-container">
  <iframe
    src={`https://docs.google.com/presentation/d/e/${id}/embed`}
    title={title}
    allowfullscreen={true}></iframe>
</div>

<style>
  .google-slides-container {
    position: relative;
    width: 100%;
    padding-top: 60%;
    overflow: hidden;
  }

  .google-slides-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
