---
import { Image } from "astro:assets";

type Props = {
  src: string;
  alt: string;
  className?: string;
  lazy?: boolean;
  isOptimization: boolean;
  width?: number;
  height?: number;
};

const {
  src,
  alt,
  className,
  lazy = true,
  isOptimization,
  width,
  height,
} = Astro.props;
const placeholderColor =
  "data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mOcfPRvPQAHHgLWeG8FbgAAAABJRU5ErkJggg==";
const loading = lazy ? "lazy" : "eager";

if (isOptimization && (!width || !height)) {
  throw new Error("width/height should be required");
}
---

{
  /* astro/image は大きさがわからないものを扱うのは難しいので、native imageも用意しておく */
}
{
  src === "" ? (
    <div
      style={{
        width: `${width}px`,
        height: `${height}px`,
        background: `url('${placeholderColor}')`,
      }}
      class={className}
    />
  ) : isOptimization ? (
    <Image
      src={src}
      className={className}
      alt={alt}
      width={width! * 4}
      height={height! * 4}
      isOptimization
    />
  ) : (
    <img
      src={src}
      class={className}
      decoding="async"
      alt={alt}
      loading={loading}
      onerror={`this.onerror=null; this.src='${placeholderColor}'`}
    />
  )
}
