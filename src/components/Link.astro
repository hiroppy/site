---
import { mergeClass } from "../utils/mergeClass";

type Props = {
  href: string;
  isBlank?: boolean;
  class?: string;
  ariaLabel?: string;
};

const { href, isBlank, class: className, ariaLabel } = Astro.props;
const isNeedTargetBlank =
  isBlank ??
  (href.startsWith("http") && !href.startsWith(import.meta.env.SITE));
---

<a
  href={href}
  target={isNeedTargetBlank ? "_blank" : undefined}
  class={mergeClass(
    "text-blue-600 dark:text-blue-300 no-underline hover:underline",
    className ?? "",
  )}
  rel={isNeedTargetBlank ? "noreferrer" : undefined}
  aria-label={ariaLabel}
>
  <slot />
</a>
