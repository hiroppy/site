---
import type { DateRange } from "../utils/timelineCalculations";
import { generateTimeMarkers } from "../utils/timelineCalculations";

type Props = {
  dateRange: DateRange;
};

const { dateRange } = Astro.props;

const markers = generateTimeMarkers(dateRange.start, dateRange.end);
---

<div class="relative h-10 border-b border-gray-300 dark:border-gray-700">
  {
    markers.map((marker) => (
      <div
        class={`absolute top-0 flex flex-col items-center ${marker.isMajor ? "timeline-marker-major" : "timeline-marker-minor"}`}
        style={`left: ${marker.position}%; transform: translateX(-50%);`}
      >
        {/* Marker Line */}
        <div
          class={`w-px ${marker.isMajor ? "h-3 bg-gray-400 dark:bg-gray-600" : "h-2 bg-gray-300 dark:bg-gray-700"}`}
        />
        {/* Marker Label */}
        <div
          class={`mt-1 text-xs whitespace-nowrap ${marker.isMajor ? "font-semibold text-gray-700 dark:text-gray-300" : "text-gray-500 dark:text-gray-500"}`}
        >
          {marker.label}
        </div>
      </div>
    ))
  }
</div>

<style>
  /* Hide minor markers on mobile */
  @media (max-width: 767px) {
    .timeline-marker-minor {
      display: none;
    }
  }

  /* Show fewer markers on tablet */
  @media (min-width: 768px) and (max-width: 1023px) {
    .timeline-marker-minor:nth-child(3n) {
      display: none;
    }
  }
</style>
