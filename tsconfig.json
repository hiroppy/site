{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "types": ["astro/client"],
    "paths": {
      "hiroppy/*": ["./node_modules/hiroppy/*"]
    }
  },
  "exclude": ["dist"]
}
