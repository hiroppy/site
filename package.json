{
  "name": "@hiroppy/site",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.7.6",
  "scripts": {
    "setup": "git config --local core.hooksPath .githooks && pnpm corepack",
    "corepack": "corepack enable pnpm",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro check",
    "test": "playwright test",
    "test:update": "docker run --rm --network host -v $(pwd):/work/ -w /work/ -it mcr.microsoft.com/playwright:focal /bin/bash -c 'npm test -- -u'",
    "fmt": "prettier -w --plugin-search-dir=. .",
    "fmt:check": "prettier --check .",
    "data:generate": "node scripts/index.mjs",
    "data:clean": "rm -r ./generated/* ./public/images/external/*",
    "cache": "node scripts/generatecache.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.38.0",
    "cheerio": "^1.0.0-rc.12",
    "color": "^4.2.3",
    "dotenv": "^16.3.1",
    "emoji-js": "^3.7.0",
    "octokit": "^3.1.0",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "remark": "^14.0.3",
    "remark-frontmatter": "^4.0.1",
    "serve": "^14.2.1",
    "sharp": "^0.32.6",
    "strip-markdown": "^5.0.1",
    "yaml": "^2.3.2"
  },
  "dependencies": {
    "@astrojs/image": "^0.18.0",
    "@astrojs/mdx": "^1.1.0",
    "@astrojs/partytown": "^2.0.0",
    "@astrojs/rss": "^3.0.0",
    "@astrojs/sitemap": "^3.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "algoliasearch": "^4.20.0",
    "astro": "^3.1.1",
    "instantsearch.js": "^4.56.11"
  }
}
