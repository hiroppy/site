{
  "name": "@hiroppy/site",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": "v24.12.0"
  },
  "scripts": {
    "setup": "git config --local core.hooksPath .githooks && npm run corepack",
    "corepack": "corepack enable pnpm",
    "dev": "pnpm copy-images && next dev --webpack",
    "build": "pnpm copy-images && next build --webpack",
    "start": "NODE_ENV=production next start",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:a11y": "playwright test --project=*-a11y",
    "test:vrt:update": "docker compose -f compose.vrt.yml up --build && pnpm docker:clean",
    "test:vrt:ci": "playwright test --project=*-vrt-*",
    "test:vrt:ci:update": "pnpm test:vrt:ci --update-snapshots",
    "test:vrt:ci:pages": "playwright test --project=*-vrt-pages",
    "test:vrt:ci:components": "playwright test --project=*-vrt-components",
    "typecheck": "next typegen && tsc --noEmit",
    "fmt": "prettier -w .",
    "fmt:check": "prettier --check .",
    "lint": "knip",
    "lh": "lhci autorun",
    "index": "node --experimental-strip-types scripts/updateBlogOnAlgolia.mts",
    "copy-images": "node --experimental-strip-types scripts/copyHiroppyImages.mts",
    "docker:clean": "docker compose -f compose.vrt.yml down --rmi all --volumes && docker image prune -f"
  },
  "dependencies": {
    "@expressive-code/plugin-collapsible-sections": "0.41.4",
    "@expressive-code/plugin-line-numbers": "0.41.4",
    "@mdx-js/loader": "3.1.1",
    "@mdx-js/react": "3.1.1",
    "@next/mdx": "16.0.10",
    "@next/third-parties": "16.0.10",
    "@tailwindcss/postcss": "4.1.18",
    "algoliasearch": "5.45.0",
    "cheerio": "1.1.2",
    "clsx": "2.1.1",
    "feed": "5.1.0",
    "github-slugger": "2.0.0",
    "gray-matter": "4.0.3",
    "hiroppy": "1.0.70",
    "next": "16.0.10",
    "octokit": "5.0.5",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-icons": "5.5.0",
    "react-markdown": "10.1.0",
    "rehype-expressive-code": "0.41.4",
    "rehype-slug": "6.0.0",
    "remark-gfm": "4.0.1",
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@lhci/cli": "0.15.1",
    "@playwright/test": "1.57.0",
    "@tailwindcss/vite": "4.1.18",
    "@trivago/prettier-plugin-sort-imports": "6.0.0",
    "@types/mdast": "4.0.4",
    "@types/mdx": "2.0.13",
    "@types/node": "24.10.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "@vitest/browser-playwright": "4.0.15",
    "babel-plugin-react-compiler": "1.0.0",
    "knip": "5.71.0",
    "lefthook": "2.0.11",
    "postcss": "8.5.6",
    "prettier": "3.7.4",
    "prettier-plugin-tailwindcss": "0.7.2",
    "remark": "15.0.1",
    "remark-frontmatter": "5.0.0",
    "remark-mdx-frontmatter": "5.2.0",
    "strip-markdown": "6.0.0",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "unist-util-visit": "5.0.0",
    "vitest": "4.0.15"
  }
}
