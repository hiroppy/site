{
  "name": "@hiroppy/site",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.10.5",
  "scripts": {
    "setup": "git config --local core.hooksPath .githooks && pnpm corepack",
    "corepack": "corepack enable pnpm",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro check",
    "test": "playwright test",
    "test:update": "docker run --rm --network host -v $(pwd):/work/ -w /work/ -it mcr.microsoft.com/playwright:focal /bin/bash -c 'npm test -- -u'",
    "fmt": "prettier -w --plugin-search-dir=. .",
    "fmt:check": "prettier --check .",
    "data:generate": "node scripts/index.mjs",
    "data:clean": "rm -r ./generated/* ./src/assets/images/external/*",
    "cache": "node scripts/generatecache.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "cheerio": "^1.0.0-rc.12",
    "color": "^4.2.3",
    "dotenv": "^16.3.1",
    "emoji-js": "^3.8.0",
    "octokit": "^3.1.2",
    "prettier": "^3.1.0",
    "prettier-plugin-astro": "^0.12.2",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "serve": "^14.2.1",
    "strip-markdown": "^6.0.0",
    "yaml": "^2.3.4"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.1",
    "@astrojs/mdx": "^1.1.5",
    "@astrojs/partytown": "^2.0.2",
    "@astrojs/rss": "^3.0.0",
    "@astrojs/sitemap": "^3.0.3",
    "@astrojs/tailwind": "^5.0.2",
    "algoliasearch": "^4.20.0",
    "astro": "^3.5.5",
    "instantsearch.js": "^4.60.0",
    "sharp": "^0.32.6",
    "typescript": "^5.2.2"
  }
}
