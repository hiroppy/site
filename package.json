{
  "name": "@hiroppy/site",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": "24.11.1"
  },
  "scripts": {
    "setup": "git config --local core.hooksPath .githooks && npm run corepack",
    "corepack": "corepack enable pnpm",
    "dev": "astro dev",
    "build": "astro build",
    "build:local": "NODE_ENV=test astro build",
    "preview": "NODE_ENV=test astro preview",
    "check": "astro check",
    "test:a11y": "NODE_ENV=test playwright test --project=*-a11y-*",
    "test:vrt:update": "docker compose -f compose.vrt.yml up --build && pnpm docker:clean",
    "test:vrt:ci": "NODE_ENV=test playwright test --project=*-vrt-*",
    "test:vrt:ci:update": "pnpm test:vrt:ci --update-snapshots",
    "test:vrt:ci:pages": "NODE_ENV=test playwright test --project=*-vrt-pages",
    "test:vrt:ci:components": "NODE_ENV=test playwright test --project=*-vrt-components",
    "docker:clean": "docker compose -f compose.vrt.yml down --rmi all --volumes && docker image prune -f",
    "fmt": "prettier -w .",
    "fmt:check": "prettier --check .",
    "lint": "knip",
    "lh": "lhci autorun",
    "index": "node --experimental-strip-types scripts/updateBlogOnAlgolia.mts",
    "generate:feedle-og": "node --experimental-strip-types scripts/generate-feedle-og-images.mts"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@iconify-json/mdi": "1.2.3",
    "@iconify-json/noto": "1.2.7",
    "@lhci/cli": "0.15.1",
    "@playwright/test": "1.57.0",
    "astro-icon": "1.1.5",
    "cheerio": "1.1.2",
    "knip": "5.70.2",
    "octokit": "5.0.5",
    "prettier": "3.7.1",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.7.1",
    "remark": "15.0.1",
    "remark-frontmatter": "5.0.0",
    "strip-markdown": "6.0.0",
    "tailwindcss": "4.1.17",
    "typescript": "5.9.3",
    "unist-util-visit": "5.0.0",
    "yaml": "2.8.1"
  },
  "dependencies": {
    "@astrojs/check": "0.9.6",
    "@astrojs/mdx": "4.3.12",
    "@astrojs/node": "9.5.1",
    "@astrojs/partytown": "2.1.4",
    "@astrojs/rss": "4.0.14",
    "@astrojs/sitemap": "3.6.0",
    "@astrojs/vercel": "9.0.2",
    "@expressive-code/plugin-collapsible-sections": "0.41.3",
    "@expressive-code/plugin-line-numbers": "0.41.3",
    "@tailwindcss/vite": "4.1.17",
    "algoliasearch": "5.45.0",
    "astro": "5.16.2",
    "astro-expressive-code": "0.41.3",
    "clsx": "2.1.1",
    "hiroppy": "1.0.55",
    "instantsearch.js": "4.84.0",
    "marked": "17.0.1",
    "satori": "0.18.3",
    "sharp": "0.34.5",
    "tailwind-merge": "3.4.0"
  }
}
