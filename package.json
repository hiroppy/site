{
  "name": "@hiroppy/site",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.4.0",
  "scripts": {
    "setup": "git config --local core.hooksPath .githooks && pnpm corepack",
    "corepack": "corepack enable pnpm",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro check",
    "test": "playwright test",
    "test:update": "docker run --rm --network host -v $(pwd):/work/ -w /work/ -it mcr.microsoft.com/playwright:focal /bin/bash -c 'npm test -- -u'",
    "fmt": "prettier -w --plugin-search-dir=. .",
    "fmt:check": "prettier --check .",
    "data:generate": "node scripts/index.mjs",
    "data:clean": "rm -r ./generated/* ./public/images/external/*",
    "cache": "node scripts/generatecache.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.33.0",
    "cheerio": "^1.0.0-rc.12",
    "color": "^4.2.3",
    "dotenv": "^16.0.3",
    "emoji-js": "^3.7.0",
    "octokit": "^2.0.14",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "^0.8.0",
    "remark": "^14.0.2",
    "remark-frontmatter": "^4.0.1",
    "serve": "^14.2.0",
    "sharp": "^0.32.1",
    "strip-markdown": "^5.0.0",
    "yaml": "^2.2.2"
  },
  "dependencies": {
    "@astrojs/image": "^0.16.7",
    "@astrojs/mdx": "^0.19.1",
    "@astrojs/partytown": "^1.2.1",
    "@astrojs/rss": "^2.4.1",
    "@astrojs/sitemap": "^1.3.0",
    "@astrojs/tailwind": "^3.1.2",
    "algoliasearch": "^4.17.0",
    "astro": "^2.4.3",
    "instantsearch.js": "^4.55.0"
  }
}
