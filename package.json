{
  "name": "@hiroppy/site",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "setup": "git config --local core.hooksPath .githooks && npm run corepack",
    "corepack": "corepack enable pnpm",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro check",
    "test": "playwright test --update-snapshots",
    "test:update": "docker build -f snapshot.dockerfile -t snapshot-update . && docker run --rm --network host -v $(pwd):/app/ -w /app/ -it snapshot-update",
    "fmt": "prettier -w .",
    "fmt:check": "prettier --check .",
    "cache": "node scripts/generatecache.mjs",
    "serve": "serve dist",
    "a11y": "pa11y-ci",
    "lh": "lhci autorun"
  },
  "devDependencies": {
    "@lhci/cli": "0.14.0",
    "@playwright/test": "1.52.0",
    "cheerio": "1.0.0",
    "color": "5.0.0",
    "emoji-js": "3.8.1",
    "octokit": "5.0.3",
    "pa11y-ci": "3.1.0",
    "prettier": "3.5.3",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.11",
    "remark": "15.0.1",
    "remark-frontmatter": "5.0.0",
    "serve": "14.2.4",
    "strip-markdown": "6.0.0",
    "typescript": "5.8.3",
    "yaml": "2.8.0"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/mdx": "4.3.0",
    "@astrojs/partytown": "2.1.4",
    "@astrojs/rss": "4.0.11",
    "@astrojs/sitemap": "3.4.0",
    "@astrojs/tailwind": "6.0.2",
    "algoliasearch": "4.24.0",
    "astro": "5.8.1",
    "hiroppy": "1.0.13",
    "instantsearch.js": "4.78.3",
    "marked": "15.0.12",
    "satori": "0.13.1",
    "sharp": "0.34.2"
  },
  "pnpm": {
    "overrides": {
      "puppeteer": "^23.0.0"
    }
  }
}
