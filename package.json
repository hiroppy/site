{
  "name": "@hiroppy/site",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.11.1",
  "engines": {
    "node": "22.16.0"
  },
  "scripts": {
    "setup": "git config --local core.hooksPath .githooks && npm run corepack",
    "corepack": "corepack enable pnpm",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro check",
    "test": "playwright test",
    "test:update": "docker compose -f compose.vrt.yml up --build",
    "test:a11y": "playwright test --project=*-a11y",
    "test:vrt": "playwright test --project=*-vrt-*",
    "test:vrt:update": "pnpm test:vrt --update-snapshots",
    "test:vrt:pages": "playwright test --project=*-vrt-pages",
    "test:vrt:components": "playwright test --project=*-vrt-components",
    "docker:clean": "docker compose -f compose.vrt.yml down --rmi all --volumes",
    "fmt": "prettier -w .",
    "fmt:check": "prettier --check .",
    "lint": "knip",
    "lh": "lhci autorun",
    "index": "node --experimental-strip-types scripts/updateBlogOnAlgolia.mts"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.10.2",
    "@lhci/cli": "0.14.0",
    "@playwright/test": "1.52.0",
    "cheerio": "1.0.0",
    "knip": "5.60.2",
    "octokit": "5.0.3",
    "prettier": "3.5.3",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.12",
    "remark": "15.0.1",
    "remark-frontmatter": "5.0.0",
    "serve": "14.2.4",
    "strip-markdown": "6.0.0",
    "tailwindcss": "4.1.8",
    "typescript": "5.8.3",
    "yaml": "2.8.0"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/mdx": "4.3.0",
    "@astrojs/partytown": "2.1.4",
    "@astrojs/rss": "4.0.12",
    "@astrojs/sitemap": "3.4.1",
    "@tailwindcss/vite": "4.1.8",
    "algoliasearch": "5.27.0",
    "astro": "5.9.1",
    "clsx": "2.1.1",
    "hiroppy": "1.0.41",
    "iconify-icon": "3.0.0",
    "instantsearch.js": "4.78.3",
    "marked": "15.0.12",
    "satori": "0.14.0",
    "sharp": "0.34.2",
    "tailwind-merge": "3.3.0"
  }
}
